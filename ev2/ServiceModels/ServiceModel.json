{
    "$schema": "https://ev2schema.azure.net/schemas/2020-01-01/serviceModel.json",
    "serviceMetadata": {
        "serviceGroup": "TechTrain.Todo",
        "serviceIdentifier": "<service-identifier>",
        "environment": "Dev"
    },
    "serviceResourceGroupDefinitions": [
        {
            "name": "todo",
            "serviceResourceDefinitions": [
                {
                    "name": "infra",
                    "composedOf": {
                        "arm": {
                            "templatePath": "main.json",
                            "parametersPath": "Parameters/Parameters.Infra.json"
                        }
                    }
                },
                {
                    "name": "apps",
                    "composedOf": {
                        "arm": {
                            "templatePath": "apps.json",
                            "parametersPath": "Parameters/Parameters.Apps.json"
                        }
                    }
                }
            ]
        }
    ],
    "serviceResourceGroups": [
        {
            "azureResourceGroupName": "rg-tt-<your-alias>-dev-<region-short-name>",
            "location": "<region-name>",
            "instanceOf": "todo",
            "azureSubscriptionId": "<your-subscription-id>",
            "scopeTags": [
                {
                    "name": "EnvironmentScope"
                },
                {
                    "name": "PrefixScope"
                },
                {
                    "name": "TeamScope"
                },
                {
                    "name": "RegionScope"
                },
                {
                    "name": "BinariesScope"
                }
            ],
            "serviceResources": [
                {
                    "name": "todo.infra.dev",
                    "instanceOf": "infra"
                },
                {
                    "name": "todo.apps.dev",
                    "instanceOf": "apps"
                }
            ]
        },
        {
            "azureResourceGroupName": "rg-tt-<your-alias>-prod-<region-short-name>",
            "location": "<region-name>",
            "instanceOf": "todo",
            "azureSubscriptionId": "<your-subscription-id>",
            "scopeTags": [
                {
                    "name": "EnvironmentScope"
                },
                {
                    "name": "PrefixScope"
                },
                {
                    "name": "TeamScope"
                },
                {
                    "name": "RegionScope"
                },
                {
                    "name": "BinariesScope"
                }
            ],
            "serviceResources": [
                {
                    "name": "todo.infra.prod",
                    "instanceOf": "infra"
                },
                {
                    "name": "todo.apps.prod",
                    "instanceOf": "apps"
                }
            ]
        }
    ]
}